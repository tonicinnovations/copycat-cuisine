
{
  "manifest_version": 3,
  "name": "CopyCat Cuisine",
  "version": "1.0.0",
  "description": "Get copycat recipes of your favorite restaurant dishes",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mcdonalds.com/*",
        "*://*.olivegarden.com/*",
        "*://*.chickfila.com/*",
        "*://*.chick-fil-a.com/*",
        "*://*.panerabread.com/*",
        "*://*.starbucks.com/*",
        "*://*.thecheesecakefactory.com/*",
        "*://*.chillis.com/*",
        "*://*.tacobell.com/*",
        "*://*.kfc.com/*",
        "*://*.dominos.com/*",
        "*://*.pizzahut.com/*",
        "*://*.subway.com/*",
        "*://*.wendys.com/*",
        "*://*.outback.com/*",
        "*://*.burgerking.com/*",
        "*://*.texasroadhouse.com/*",
        "*://*.redlobster.com/*",
        "*://*.chipotle.com/*",
        "*://*.buffalowildwings.com/*",
        "*://*.ihop.com/*",
        "*://*.dennys.com/*",
        "*://*.applebees.com/*",
        "*://*.cracker-barrel.com/*",
        "*://*.popeyes.com/*"
      ],
      "js": ["assets/content_script.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
